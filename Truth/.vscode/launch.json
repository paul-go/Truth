{
	"version": "0.2.0",
	"configurations": [{
		"type": "node",
		"request": "launch",
		"name": "Debug Project",
		"program": "${workspaceFolder}/Build/Dev/Quick/Start.js", 
		"internalConsoleOptions": "neverOpen",
		"sourceMaps": true,
		"args": [
			"--file=./Quick/Samples/BaseWithAlias.truth"
		]
	},
	{
		"name": "Debug Compiler Remotely",
		"type": "chrome",
		"request": "attach",
		"port": 9223,
		"webRoot": "${workspaceRoot}",
		"timeout": 30000,
		"smartStep": true,
		"sourceMaps": true,
		"sourceMapPathOverrides": {
			"**/node_modules/truth-compiler/*": "${webRoot}/*"
		}
	},
	{
		"type": "node",
		"request": "launch",
		"name": "Debug Jest Tests",
		"program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
		"args": [
			
		],
		"internalConsoleOptions": "openOnSessionStart"
	},
	{
		"type": "node",
		"request": "launch",
		"name": "Debug Release Script",
		"program": "${workspaceRoot}/release.js",
		"args": [
			"--debug-brk"
		],
		"internalConsoleOptions": "openOnSessionStart"
	}]
}
